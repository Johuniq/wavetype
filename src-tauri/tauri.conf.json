{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "WaveType",
  "version": "1.0.0",
  "identifier": "com.johuniq.WaveType",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "WaveType",
        "label": "main",
        "width": 420,
        "height": 560,
        "minWidth": 360,
        "minHeight": 480,
        "resizable": true,
        "center": true,
        "decorations": true,
        "transparent": false,
        "visible": true,
        "focus": true,
        "dragDropEnabled": true
      },
      {
        "title": "",
        "label": "recording-overlay",
        "url": "/overlay.html",
        "width": 1920,
        "height": 1080,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "visible": false,
        "skipTaskbar": true,
        "focus": false,
        "fullscreen": true
      }
    ],
    "security": {
      "csp": "default-src 'self' blob:; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https: blob:; connect-src 'self' https://huggingface.co https://*.huggingface.co https://github.com https://*.github.com https://api.github.com",
      "dangerousDisableAssetCspModification": false,
      "freezePrototype": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "category": "Utility",
    "shortDescription": "Voice-to-text desktop app powered by AI",
    "longDescription": "WaveType is a powerful voice-to-text application that lets you dictate text anywhere on your computer using AI-powered speech recognition. Features include push-to-talk and toggle recording modes, multiple Whisper AI model sizes, automatic text injection, transcription history, and file transcription support.",
    "publisher": "Johuniq",
    "copyright": "Â© 2024 Johuniq. All rights reserved.",
    "licenseFile": "../LICENSE",
    "linux": {
      "appimage": {
        "bundleMediaFramework": true,
        "files": {}
      },
      "deb": {
        "depends": ["libxdo3", "libasound2"],
        "section": "utils",
        "priority": "optional"
      },
      "rpm": {
        "depends": ["libxdo", "alsa-lib"],
        "release": "1"
      }
    },
    "macOS": {
      "entitlements": "WaveType.entitlements",
      "minimumSystemVersion": "13.0",
      "frameworks": [],
      "hardenedRuntime": true,
      "signingIdentity": null,
      "providerShortName": null,
      "dmg": {
        "background": null,
        "windowSize": {
          "width": 660,
          "height": 400
        },
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        }
      }
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "https://timestamp.digicert.com",
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "allowDowngrades": true,
      "nsis": {
        "template": null,
        "installerIcon": "icons/icon.ico",
        "headerImage": null,
        "sidebarImage": null,
        "installMode": "currentUser",
        "languages": ["English"],
        "displayLanguageSelector": false,
        "compression": "lzma"
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVGREUwNUUzM0ZDMkNEQjIKUldTeXpjSS80d1hlWDAzWEk2dDZDWkNndEg4aFUyb2JOU2taVTE1NDkwQ2JIV0kwVFlnQ29DdjYK",
      "endpoints": [
        "https://github.com/Johuniq/wavetype/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
